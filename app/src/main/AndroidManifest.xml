<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.haerul.foodsapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".view.home.FunctionActivity">
        </activity>
        <activity android:name=".view.home.HomeActivity">
        </activity>
        <activity
                android:name=".view.home.MainActivity"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".view.home.category.CategoryActivity"
                android:label="Category"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme"/> <!-- TODO #1 Add DetailActivity -->
        <activity
                android:name=".view.home.detail.DetailActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>